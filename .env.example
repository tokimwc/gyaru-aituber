# ギャルAITuber「りんね」環境設定ファイル
# このファイルをコピーして .env を作成し、あなたの環境に合わせて編集してください
# cp .env.example .env

# ===================================
# モデル設定
# ===================================

# モデル格納ベースパス
MODEL_BASE_PATH=/path/to/your/models

# 使用するモデル名
MODEL_NAME=Qwen2.5-32B-Instruct-bnb-4bit

# モデルフルパス（自動生成される場合は省略可）
# MODEL_PATH=${MODEL_BASE_PATH}/${MODEL_NAME}

# ===================================
# サーバー設定（WSL2使用時）
# ===================================

# WSL2のIPアドレス
# 取得方法: hostname -I
# 例: 172.31.xxx.xxx
WSL2_IP=127.0.0.1

# サーバーポート
SERVER_PORT=8080

# ===================================
# VOICEVOX設定
# ===================================

# VOICEVOXのホスト（通常はlocalhost）
VOICEVOX_HOST=127.0.0.1

# VOICEVOXのポート
VOICEVOX_PORT=50021

# VOICEVOX API URL（サーバー側プロキシ用）
# WSL2環境でWindowsホストにアクセスする場合は、WindowsホストのIPに変更
# 例: http://<WINDOWS_HOST_IP>:50021 (通常は 172.16.x.1 〜 172.31.x.1 の範囲)
# 通常はブラウザから直接アクセスするため、この設定は不要
VOICEVOX_URL=http://127.0.0.1:50021

# 使用する話者ID（デフォルト: 8 = 春日部つむぎノーマル）
VOICEVOX_SPEAKER_ID=8

# ===================================
# RepE設定
# ===================================

# ギャルベクトルの強度（デフォルト: 12.0）
# 推奨範囲: 8.0（控えめ）〜 15.0（強め）
GYARU_STRENGTH=12.0

# 可視化対象レイヤー（デフォルト: 48）
VISUALIZE_LAYER=48

# ===================================
# 生成設定
# ===================================

# 最大生成トークン数
MAX_NEW_TOKENS=128

# Temperature（多様性）
TEMPERATURE=0.7

# Top-p sampling
TOP_P=0.9
